<Window x:Class="PumpUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PumpUtil"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Canvas>
        <TextBlock Text="COM Port" Width="100" Height="30" Canvas.Left="10" Canvas.Top="14" FontSize="16"/>
        <ComboBox x:Name="comboBoxPorts" Width="120" Height="30" Canvas.Left="110" Canvas.Top="10" FontSize="16"/>
        <TextBlock Text="Baud Rate" Width="100" Height="30" Canvas.Left="10" Canvas.Top="54" FontSize="16"/>
        <TextBox x:Name="textBoxBaudRate" Width="120" Height="30" Canvas.Left="110" Canvas.Top="50" FontSize="16" TextAlignment="Center"/>
        <TextBlock Text="Parity" Width="100" Height="30" Canvas.Left="10" Canvas.Top="94" FontSize="16"/>
        <ComboBox x:Name="comboBoxParity" Width="120" Height="30" Canvas.Left="110" Canvas.Top="90" FontSize="16"/>
        <TextBlock Text="Data Bits" Width="100" Height="30" Canvas.Left="10" Canvas.Top="134" FontSize="16"/>
        <TextBox x:Name="textBoxDataBits" Width="120" Height="30" Canvas.Left="110" Canvas.Top="130" FontSize="16" TextAlignment="Center"/>
        <TextBlock Text="Stop Bits" Width="100" Height="30" Canvas.Left="10" Canvas.Top="174" FontSize="16"/>
        <TextBox x:Name="textBoxStopBits" Width="120" Height="30" Canvas.Left="110" Canvas.Top="170" FontSize="16" TextAlignment="Center"/>
        <Button x:Name="buttonOpen" Content="Open" Width="100" Height="30" Canvas.Left="10" Canvas.Top="220" FontSize="16" Click="Open_Click"/>
        <Button x:Name="buttonClose" Content="Close" Width="100" Height="30" Canvas.Left="120" Canvas.Top="220" FontSize="16" Click="Close_Click"/>
        <Button x:Name="buttonSend" Content="Send" Width="100" Height="30" Canvas.Left="230" Canvas.Top="220" FontSize="16" Click="Send_Click"/>
        <TextBox x:Name="textBoxOutput" Width="740" Height="200" Canvas.Left="20" Canvas.Top="270" FontSize="16" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" />
    </Canvas>
</Window>
